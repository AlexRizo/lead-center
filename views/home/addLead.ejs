<div class="section lead">
    <div class="cards-content">
        <form class="card lead-data">
            <div class="card-header">
                <h3 class="card-title">Información Personal</h3>
            </div>
            <div class="card-body">
                <input name="id" type="hidden" id="id"/>
                <input name="contact_status" type="hidden" class="input" id="status"/>
                <div class="input-content">
                    <label for="name">Nombre Completo</label>
                    <input name="name" class="input input-form" type="text" id="name" maxlength="100" required placeholder="Nombre completo del prospecto"/>
                </div>
                <div class="inputs-content">
                    <div class="input-content">
                        <label for="city">Ciudad</label>
                        <input name="city" class="input input-form" type="text" id="city" maxlength="100" required placeholder="Ciudad del prospecto"/>
                    </div>
                    <div class="input-content">
                        <label for="phone_number">Número de Teléfono</label>
                        <input class="input input-form" name="phone_number" id="phone_number" maxlenght="15" type="tel" required placeholder="Número de teléfono del prospecto"/>
                    </div>
                </div>
                <div class="input-content">
                    <label for="email">Correo</label>
                    <input name="email" class="input input-form" type="email" id="email" maxlength="100" required placeholder="Correo del prospecto"/>
                </div>
                <div class="inputs-content">
                    <div class="input-content">
                        <label for="date_contact">Fecha de Registro</label>
                        <input name="date_contact" class="input input-form" type="date" id="date_contact" required/>
                    </div>
                    <div class="input-content">
                        <label for="platformId">Plataforma</label>
                        <select name="platformId" id="platformId" class="input input-form" required>
                            <% platforms.forEach(platform => { %>
                                <option value="<%= platform.id %>"><%= platform.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="input-content">
                    <label for="reason">Motivo</label>
                    <input name="reason" class="input input-form" type="text" id="reason" maxlength="500" required placeholder="Terrenos, precios, etc..."/>
                </div>
                <div class="inputs-content">
                    <div class="input-content">
                        <label for="originId">Campaña de Origen</label>
                        <select name="originId" id="originId" class="input input-form" required>
                            <% origins.forEach(origin => { %>
                                <option value="<%= origin.id %>"><%= origin.name %></option>
                            <% }); %>
                        </select>
                    </div>
                    <div class="input-content">
                        <label for="staffId">Asignado A:</label>
                        <select name="staffId" id="staffId" class="input input-form" required>
                            <% staffs.forEach(staff => { %>
                                <option value="<%= staff.id %>"><%= staff.name %></option>
                            <% }); %>
                        </select>
                    </div>
                </div>
                <div class="input-content">
                    <label for="note">Fecha de Registro</label>
                    <textarea class="input input-form" name="note" id="note" maxlength="500" cols="30" rows="10" placeholder="Nota..." required></textarea>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-form submit" type="submit">Crear Lead</button>
            </div>
        </form>
    </div>
</div>

<script src="/js/home/lead.js"></script>